
<div class="row">
  <div class="col-lg-12">
    <div>
      <%= link_to '<button class="btn btn-success btn-small pull-right">+ New Blog</button>'.html_safe, 
        new_admin_blog_path %>
    </div>    
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
            <th>Actions</th>                    
          </tr>
        </thead>
        <tbody>
          <% @blogs.each do |admin_blog| %>
            <tr>
              <td><%= link_to admin_blog.title, admin_blog %></td>
              <td><%= admin_blog.body.truncate(100) %></td>
              <td>
                <%= link_to 'Edit', edit_admin_blog_path(admin_blog) %> | 
                <%= link_to 'Destroy', admin_blog, method: :delete, data: { confirm: 'Are you sure?' } %>             
              </td>                    
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
